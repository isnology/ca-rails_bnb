<div class="container-fluid">
  <div class="row">
    <div class="col">
      <h1 class="mt-3">Rails BnB</h1>
    </div>
    <div class="col">
      <nav>
        <% if user_signed_in? %>
          <%= link_to 'Sign out', destroy_user_session_path, class: 'btn btn-warning', method: :delete %>
        <% else %>
          <%= link_to 'Sign in', new_user_session_path, class: 'btn btn-primary' %>
          <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-primary' %>
        <% end %>
      </nav>
    </div>
  </div>
</div>

<h1>Listings</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Street address</th>
      <th>City</th>
      <th>Country</th>
      <th>Bed count</th>
      <th>Bedroom count</th>
      <th>Bathroom count</th>
      <th>Description</th>
      <th>Night fee</th>
      <th>Cleaning fee</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= link_to 'Edit', edit_listing_path(listing), class: 'btn btn-warning btn-sm' %></td>
        <td><%= link_to listing.title, listing, class: 'btn btn-success btn-sm' %></td>
        <td><%= listing.street_address %></td>
        <td><%= listing.city %></td>
        <td><%= listing.country.name %></td>
        <td><%= listing.bed_count %></td>
        <td><%= listing.bedroom_count %></td>
        <td><%= listing.bathroom_count %></td>
        <td><%= listing.description %></td>
        <td><%= listing.night_fee.format %></td>
        <td><%= listing.cleaning_fee.format %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn
        btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path, class: 'btn btn-warning' %>
<%= link_to 'Support Email', support_path, class: 'btn btn-success' %>
<%= link_to 'Bookings', bookings_path, class: 'btn btn-success' %>

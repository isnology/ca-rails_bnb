<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Listing</th>
      <th>Guest</th>
      <th>Check in at</th>
      <th>Check out at</th>
      <th>Guest count</th>
      <th>Charge identifier</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.listing.title %></td>
        <td><%= booking.guest.email %></td>
        <td><%= booking.check_in_at %></td>
        <td><%= booking.check_out_at %></td>
        <td><%= booking.guest_count %></td>
        <td><%= booking.charge_identifier %></td>
        <td><%= link_to 'Show', booking, class: 'btn btn-success'  %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn
        btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', listings_path, class: 'btn btn-success' %>
